<swiper
  indicator-dots="trus"
  autoplay="true"
  circular="true"
  interval="3000"
  duration="1000"
  easing-function="linear">
  <block wx:for="{{banners}}" wx:key="*this">
    <swiper-item>
      <image src="{{item}}" mode="widthFix" />
    </swiper-item>
  </block>
</swiper>
<view class="favor">
  <text>收藏卡面</text>
  <image  bindtap="goFavor" src="/assets/2.jpg" ></image>
</view> 
<view>
  <text>咖啡+祝福，即刻表达心意</text>
  <view class="list">
    <block wx:for="{{list}}" wx:key="*this">
      <view   bindtap="goDetail"  class="item" data-id="{{item.id}}">
        <image src="{{item.image}}"></image>
        <text>{{item.title}}</text>
      </view>
    </block>
  </view>
</view>
